body
  font: 100% "Lucida Grande", Helvetica, Arial, sans-serif
  top: 0; left: 0; right: 0; bottom: 0;
  overflow-y: hidden
  overflow-x: hidden
  width: 100%
  padding: 0
  margin: 0
a
  color: #00B7FF

h1
  font-size: 3em

h2
  font-size: 2em
  padding: 0 0.3125em


.step
  width: 95%
  height: 400px
  margin-left: auto
  margin-right: auto
  border-width: 1px
  border-style: solid
  border-color: black

.footer
  width: 95%
  height: 100px
  text-align: center
  margin-left: auto
  margin-right: auto
  margin-top: 50px

#gesture-sandbox
  width: 85%
  height: 200px
  border-width: 1px
  border-style: solid
  border-color: red
  margin-left: auto
  margin-right: auto
  margin-top: 50px

.panel-small
  width: 25%
  margin-left: auto
  margin-right: auto
  margin-top: 80px
  border-top-width: 2px
  border-top-style: solid
  border-top-color: black

.panel-small .stop-trainer
  float: right

.trainer-msg
  text-align: center
  font-size: 2em
  color: gray







