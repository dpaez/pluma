body
  font: 100% "Lucida Grande", Helvetica, Arial, sans-serif
  top: 0; left: 0; right: 0; bottom: 0;
  overflow-y: hidden
  overflow-x: hidden
  //width: 100%
  //height: 100%
  padding: 0
  margin: 0

a
  color: #00B7FF

h1
  font-size: 3em

h2
  font-size: 2em
  padding: 0 0.3125em

canvas
  display: block
  padding-left: 0
  padding-right: 0
  margin-left: auto
  margin-right: auto
  border-style: solid
  border-color: red
  border-width: 1px

.step
  position: absolute
  top: 94px
  bottom: 94px
  width: 100%

.footer
  position: absolute
  height: 100px
  bottom: 10px
  right: 10px
  left: 10px


.error
  visibility: hidden
  color: red
  font-style: italic

// ******************
// Common steps style
// ******************

.sandbox
  width: 95%
  height: 85%
  border-width: 1px
  border-style: solid
  border-color: red
  margin-left: auto
  margin-right: auto

.footer button
  position: absolute
  display: inline-block
  width: 10%
  bottom: 10px

.footer button.prev-step
  left: 35%

.footer button.next-step
  left: 55%


// ******************
// Step 1 (Leap)
// ******************

#step-one
  width: 80%

.panel-small
  position: absolute
  width: 25%
  bottom: 4%
  left: 37.5% // absoluteHalfScreenSize - (elementWidth/2)
  border-top-width: 2px
  border-top-style: solid
  border-top-color: black

.panel-small button
  width: 100%;

.panel-small .stop-trainer
  float: right

.trainer-msg
  text-align: center
  font-size: 2em
  color: gray

.leap-msg
  padding-bottom: 0.4em
  text-align: center
  height: 1em
  font-size: 0.7em
  font-weight: bold
  color: green

.leap-msg > .warning
  color: orange

.known-gestures
  position: absolute
  left: 100%
  width: 100%
  top: 14.25%

.known-gestures p
  padding-bottom: 3em

.gest-reset
  left: 0
  bottom: 0
  color: gray
  font-weight: bold
  cursor: pointer

.gest-delete
  float: right
  bottom: 0
  right: 0
  color: red
  font-weight: bold
  cursor: pointer

// ******************
// Step 2 (Duino)
// ******************
.duino-board
  float: right
  width: 360px
  height: 150px
  background-image: url("../images/duino_board.png")
  background-repeat: no-repeat
  background-size: 50%
  padding: .8em .2em
  margin: 0

.blur
  width:367px
  height:159px
  filter: blur(3px)
  -webkit-filter: blur(3px)
  -moz-filter: blur(3px)
  -o-filter: blur(3px)
  -ms-filter: blur(3px)

.user-gestures
  position: absolute
  width: 100%

.duino-comp, .user-gest
  width: 14%
  height: 40px
  border-width: 1px
  border-style: solid
  border-color: black
  font-size: 0.8em
  margin-top: 0.5em

.duino-comp
  background-image: url(../images/protoboard.gif)
  background-size: 256px
  width: 256px
  height: 92px

.user-gest
  background-image: url(../images/five_finger_gesture.png)
  background-size: 91%
  background-repeat: no-repeat
  width: 136px
  height: 117px

.duino-comp p
  text-align: left
  display: inline-block
  margin: 0
  padding: 0.2em
  vertical-align: top
  zoom: 1 /* Fix for IE7 */
  *display: inline /* Fix for IE7 */

.duino-comp button
  text-align: center
  float: right

.duino-status
  width: 15%
  height: 70px
  border-width: 2px
  border-style: solid
  border-color: green



// ******************
// Step 3
// ******************

.duino-comp.over
  border-color: blue;

.duino-comp.linked, .test-gest.linked
  border-color: green
  border-width: 2px;


